<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_normal"
    android:gravity="center_horizontal"
    >

    <ImageView
        android:id="@+id/back"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_marginBottom="@dimen/margin_large"
        android:src="@drawable/back"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/margin_large"
        android:paddingRight="@dimen/margin_large"
        >

        <ImageView
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginBottom="@dimen/margin_large"
            android:src="@drawable/logo"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_small"
            android:paddingTop="@dimen/margin_small"
            android:text="@string/payment_mesg"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_very_large"
            />

        <LinearLayout
            android:id="@+id/us_payment_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <RadioGroup
                    android:id= "@+id/payment_us_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/margin_normal"
                    android:orientation="vertical"
                    >
                    <RadioButton
                        android:id="@+id/paypal"
                        android:layout_width="wrap_content"
                        android:layout_height="40dip"
                        android:padding="@dimen/margin_normal"
                        android:textSize="@dimen/textsize_normal"
                        android:text="@string/paypal"
                        android:checked="true"
                        />
                    <RadioButton
                        android:id="@+id/venmo"
                        android:layout_width="wrap_content"
                        android:layout_height="40dip"
                        android:padding="@dimen/margin_normal"
                        android:textSize="@dimen/textsize_normal"
                        android:text="@string/venmo"
                        />
                    <RadioButton
                        android:id="@+id/credit"
                        android:layout_width="wrap_content"
                        android:layout_height="40dip"
                        android:padding="@dimen/margin_normal"
                        android:textSize="@dimen/textsize_normal"
                        android:text="@string/credit"
                        />
                </RadioGroup>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_normal"
                android:textSize="@dimen/textsize_normal"
                android:text="@string/credit_desc"
                android:layout_marginLeft="40dip"
                />
        </LinearLayout>

        <RadioGroup
            android:id= "@+id/payment_india_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_normal"
            android:paddingTop="@dimen/margin_normal"
            android:visibility="gone"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_large"
                >
                <RadioButton
                    android:id="@+id/paytm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_normal"
                    android:textSize="@dimen/textsize_normal"
                    android:text="@string/paytm"
                    android:checked="true"
                    />
                <ImageView
                    android:id="@+id/paytm_chk_img"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:src="@drawable/check_image"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:visibility="invisible"
                    />
            </LinearLayout>
        </RadioGroup>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:background="@drawable/bg_btn_default"
            android:padding="@dimen/margin_normal"
            android:text="@string/Next"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_normal" />
    </LinearLayout>

</RelativeLayout>

