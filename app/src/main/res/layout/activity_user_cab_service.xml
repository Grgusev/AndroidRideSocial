<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_normal"
    android:gravity="center_horizontal"
    >

    <ImageView
        android:id="@+id/back"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_marginBottom="@dimen/margin_large"
        android:src="@drawable/back"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/margin_large"
        android:paddingRight="@dimen/margin_large"
        >

        <ImageView
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginBottom="@dimen/margin_large"
            android:src="@drawable/logo"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_small"
            android:paddingTop="@dimen/margin_small"
            android:text="@string/cabservice_mesg"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_very_large"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_normal"
            android:paddingTop="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            android:text="@string/cabservice_desc"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_normal"
            android:layout_marginLeft="@dimen/margin_normal"
            />

        <CheckBox
            android:id="@+id/uber_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_large"
            android:button="@drawable/bg_chk_blue"
            android:text="@string/uber"
            android:textColor="@color/text_normal"
            android:textSize="@dimen/textsize_large" />

        <CheckBox
            android:id="@+id/lyft_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_large"
            android:button="@drawable/bg_chk_blue"
            android:text="@string/lyft"
            android:textColor="@color/text_normal"
            android:textSize="@dimen/textsize_large" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:background="@drawable/bg_btn_default"
            android:padding="@dimen/margin_normal"
            android:text="@string/Save"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_normal" />
    </LinearLayout>

</RelativeLayout>

