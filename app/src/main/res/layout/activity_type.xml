<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_large"
    android:paddingRight="@dimen/margin_large"
    android:layout_marginTop="@dimen/margin_normal"
    android:gravity="center_horizontal"
    >

    <ImageView
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_marginBottom="@dimen/margin_large"
        android:src="@drawable/logo"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/margin_small"
        android:paddingTop="@dimen/margin_small"
        android:text="@string/drive_type"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_very_large"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_normal"
        android:paddingTop="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_normal"
        android:text="@string/drive_desc"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_large"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RadioGroup
                android:id= "@+id/drive_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/margin_normal"
                android:orientation="vertical"
                >
                <RadioButton
                    android:id="@+id/driving"
                    android:layout_width="wrap_content"
                    android:layout_height="60dip"
                    android:padding="@dimen/margin_normal"
                    android:textSize="@dimen/textsize_normal"
                    android:text="@string/driving_desc"
                    android:checked="true"
                    />
                <RadioButton
                    android:id="@+id/not_driving"
                    android:layout_width="wrap_content"
                    android:layout_height="60dip"
                    android:padding="@dimen/margin_normal"
                    android:textSize="@dimen/textsize_normal"
                    android:text="@string/not_driving_desc"
                    />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal"
        android:background="@drawable/bg_btn_default"
        android:padding="@dimen/margin_normal"
        android:text="@string/Next"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_normal" />
</LinearLayout>

